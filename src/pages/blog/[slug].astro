---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import pool from '../../lib/db';

const { slug } = Astro.params;

// 1. Fetch Post
const [rows] = await pool.execute("SELECT * FROM blog_posts WHERE slug = ?", [slug]);
const post = (rows as any[])[0];

if (!post) {
  return Astro.redirect('/blog'); 
}

// 2. Fetch Sections
const [sectionRows] = await pool.execute("SELECT * FROM blog_sections WHERE post_id = ? ORDER BY order_index ASC", [post.id]);
const sections = (sectionRows as any[]);

// 3. Fetch Related Posts (latest 3 excluding current)
const [relatedRows] = await pool.execute("SELECT * FROM blog_posts WHERE id != ? ORDER BY created_at DESC LIMIT 3", [post.id]);
const relatedPosts = (relatedRows as any[]);
---

<Layout title={`${post.title} | Blog`}>
  <Header />
  <main>
     <!-- Hero -->
     <section class="h-[60vh] md:h-[70vh] relative flex items-end justify-center bg-cover bg-center" style={`background-image: url('${post.main_image}');`}>
        <div class="absolute inset-0 bg-black/30"></div>
        <div class="relative z-10 text-center pb-20 px-6 max-w-4xl mx-auto">
             <h1 class="text-3xl md:text-5xl lg:text-6xl text-white font-light leading-tight mb-4 reveal reveal-up">{post.title}</h1>
             <p class="text-white/80 text-base md:text-lg font-light reveal reveal-up delay-100 max-w-2xl mx-auto">{post.short_description}</p>
        </div>
     </section>

     <!-- Content Sections -->
     <article class="max-w-[1000px] mx-auto px-6 md:px-0 py-24 flex flex-col gap-16">
        {sections.map((section, index) => (
            <div class={`reveal reveal-up delay-${(index % 3) * 100} w-full`}>
                {section.type === 'title' && (
                    <h2 class="text-3xl md:text-[40px] font-light text-black-soft mb-8 leading-tight">{section.content_text}</h2>
                )}

                {section.type === 'paragraph' && (
                    <p class="text-[17px] md:text-[19px] text-black-soft/80 font-light leading-[1.8] whitespace-pre-line tracking-wide">{section.content_text}</p>
                )}

                {section.type === 'image_single' && (
                    <img src={section.image_path_1} alt={post.title} class="w-full h-auto object-cover rounded-sm my-8 shadow-lg" />
                )}

                {section.type === 'image_double' && (
                     <div class="grid grid-cols-1 md:grid-cols-2 gap-8 my-8">
                        <img src={section.image_path_1} alt="Gallery 1" class="w-full h-[350px] md:h-[600px] object-cover rounded-sm shadow-md" />
                        <img src={section.image_path_2} alt="Gallery 2" class="w-full h-[350px] md:h-[600px] object-cover rounded-sm shadow-md" />
                     </div>
                )}
            </div>
        ))}
     </article>
      
     <!-- Related Posts -->
     <section class="bg-beige-light py-24 px-6 md:px-[54px] lg:px-[140px] border-t border-black-soft/5">
        <div class="max-w-[1200px] mx-auto">
            <h3 class="text-2xl font-light text-black-soft mb-12 uppercase tracking-widest text-center">Related Posts</h3>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
                {relatedPosts.map(p => (
                    <a href={`/blog/${p.slug}`} class="group flex flex-col gap-4">
                        <div class="overflow-hidden bg-gray-200">
                            <img src={p.main_image} alt={p.title} class="w-full h-[250px] object-cover transition-transform duration-700 group-hover:scale-105" />
                        </div>
                        <h4 class="text-xl font-light text-black-soft group-hover:text-gold transition-colors">{p.title}</h4>
                    </a>
                ))}
            </div>
        </div>
     </section>
  </main>
</Layout>
