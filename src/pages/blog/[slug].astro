---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import pool from '../../lib/db';

const { slug } = Astro.params;

// 1. Fetch Post
const [rows] = await pool.execute("SELECT * FROM blog_posts WHERE slug = ?", [slug]);
const post = (rows as any[])[0];

if (!post) {
  return Astro.redirect('/blog'); 
}

// 2. Fetch Sections
const [sectionRows] = await pool.execute("SELECT * FROM blog_sections WHERE post_id = ? ORDER BY order_index ASC", [post.id]);
const sections = (sectionRows as any[]);

// 3. Fetch Related Posts (latest 3 excluding current)
const [relatedRows] = await pool.execute("SELECT * FROM blog_posts WHERE id != ? ORDER BY created_at DESC LIMIT 3", [post.id]);
const relatedPosts = (relatedRows as any[]);
---

<Layout title={`${post.title} | Blog`}>
  <Header />
  <main class="bg-[#F3EBE3]">
     <!-- Hero Image (No Overlay) -->
     <section class="w-full h-[60vh] md:h-[80vh] bg-cover bg-center" style={`background-image: url('${post.main_image}');`}>
     </section>

     <!-- Title & Intro Section -->
     <section class="max-w-4xl mx-auto px-6 pt-16 pb-8 text-center flex flex-col items-center gap-6">
        <div class="reveal reveal-up">
            <span class="text-[12px] md:text-[14px] uppercase tracking-[0.2em] text-black-soft/60 font-light">
                {post.category} | DESIGN SPOTLIGHT
            </span>
            <h1 class="text-4xl md:text-[60px] lg:text-[72px] text-black-soft font-light leading-tight mt-6 mb-8">
                {post.title}
            </h1>
            <p class="text-[16px] md:text-[18px] text-black-soft/80 font-light leading-relaxed max-w-3xl mx-auto italic">
                {post.short_description}
            </p>
        </div>
     </section>

     <!-- Content Sections -->
     <article class="max-w-[900px] mx-auto px-6 pb-24 flex flex-col gap-12">
        {sections.map((section, index) => (
            <div class={`reveal reveal-up delay-${(index % 3) * 100} w-full`}>
                {section.type === 'title' && (
                    <h2 class="text-2xl md:text-[32px] font-light text-black-soft mb-6 text-center leading-tight">{section.content_text}</h2>
                )}

                {section.type === 'paragraph' && (
                    <p class="text-[16px] md:text-[18px] text-black-soft/90 font-light leading-[1.7] whitespace-pre-line tracking-normal text-center max-w-2xl mx-auto">{section.content_text}</p>
                )}

                {section.type === 'image_single' && (
                    <div class="my-6">
                        <img src={section.image_path_1} alt={post.title} class="w-full h-auto object-cover rounded-sm shadow-sm" />
                    </div>
                )}

                {section.type === 'image_double' && (
                     <div class="grid grid-cols-1 md:grid-cols-2 gap-6 my-6">
                        <img src={section.image_path_1} alt="Gallery 1" class="w-full h-[300px] md:h-[500px] object-cover rounded-sm shadow-sm" />
                        <img src={section.image_path_2} alt="Gallery 2" class="w-full h-[300px] md:h-[500px] object-cover rounded-sm shadow-sm" />
                     </div>
                )}
            </div>
        ))}
     </article>
      
     <!-- Related Posts -->
     <section class="bg-white/30 py-24 px-6 md:px-[54px] lg:px-[140px] border-t border-black/5">
        <div class="max-w-[1200px] mx-auto">
            <h3 class="text-xl font-light text-black-soft mb-12 uppercase tracking-widest text-center">Related Posts</h3>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
                {relatedPosts.map(p => (
                    <a href={`/blog/${p.slug}`} class="group flex flex-col gap-4">
                        <div class="overflow-hidden aspect-[4/3]">
                            <img src={p.main_image} alt={p.title} class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105" />
                        </div>
                        <h4 class="text-lg font-light text-black-soft group-hover:text-gold transition-colors text-center">{p.title}</h4>
                    </a>
                ))}
            </div>
        </div>
     </section>
  </main>
</Layout>
