---
import ContactFormFields from './ContactFormFields.astro';
---

<section id="contact" class="bg-beige-light px-6 md:px-[54px] py-[110px] min-h-screen flex flex-col md:flex-row gap-12 md:gap-24">
  <!-- Left Side: Header -->
  <div class="w-full md:w-1/2 flex flex-col gap-8 reveal reveal-right">
    <div class="flex flex-col gap-4">
      <span class="text-gold text-[15px] uppercase tracking-widest font-medium">
        Have questions or ready to start your project?
      </span>
      <h2 class="text-4xl md:text-[60px] leading-tight font-normal text-black-soft m-0">
        Fill out the form and we'll back to you soon!
      </h2>
    </div>
  </div>

  <!-- Right Side: Form -->
  <div class="w-full md:w-1/2 reveal reveal-up delay-200">
    <ContactFormFields formId="contact-form" />
  </div>
</section>
