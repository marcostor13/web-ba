---
const exploreLinks = [
  { name: 'Home', href: '/' },
  { name: 'Projects', href: '/projects' },
  { name: 'About us', href: '/about' },
  { name: 'Blog', href: '/blog' },
  { name: 'Contact', href: '#contact' },
];

const socialLinks = [
  { name: 'Instagram', href: 'https://instagram.com' },
  { name: 'Facebook', href: 'https://facebook.com' },
  { name: 'TikTok', href: 'https://tiktok.com' },
];
import ContactForm from './ContactForm.astro';
---

<footer class="bg-black-soft text-white pb-10 relative overflow-hidden">
  <ContactForm />
  <div class="px-6 md:px-[54px] max-w-[1440px] pt-[110px] mx-auto flex flex-col md:flex-row justify-between gap-12 md:gap-24 relative z-10">
    <!-- Logo Column -->
    <div class="w-full md:w-1/3 reveal reveal-right">
      <img src="/home/logo2.webp" alt="BA Logo" class="w-full max-w-[300px] h-auto drop-shadow-lg" />
    </div>

    <!-- Links Grid -->
    <div class="w-full md:w-2/3 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-2 gap-x-12 gap-y-16">
      
      <!-- Explore -->
      <div class="flex flex-col gap-8 reveal reveal-up delay-100">
        <h3 class="text-[12px] uppercase tracking-widest text-white/40 font-medium">Explore</h3>
        <ul class="flex flex-col gap-4 list-none p-0 m-0">
          {exploreLinks.map(link => (
            <li>
              <a href={link.href} class="text-[15px] hover:text-gold transition-colors duration-300 font-light text-white/80">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
        
        <!-- Social -->
        <div class="flex flex-col gap-8 mt-4">
          <h3 class="text-[12px] uppercase tracking-widest text-white/40 font-medium">Social</h3>
          <ul class="flex flex-col gap-4 list-none p-0 m-0">
            {socialLinks.map(link => (
              <li>
                <a href={link.href} target="_blank" rel="noopener noreferrer" class="text-[15px] hover:text-gold transition-colors duration-300 font-light text-white/80">
                  {link.name}
                </a>
              </li>
            ))}
          </ul>
        </div>
      </div>

      <!-- Contact & Hours -->
      <div class="flex flex-col gap-8 reveal reveal-up delay-200">
        <!-- Contact Info -->
        <div class="flex flex-col gap-8">
          <h3 class="text-[12px] uppercase tracking-widest text-white/40 font-medium">Contact</h3>
          <div class="flex flex-col gap-4">
            <div class="flex flex-col gap-1">
              <span class="text-[13px] text-white/40 uppercase tracking-widest">Email:</span>
              <a href="mailto:estimate@bakitchenandbathdesign.com" class="text-[15px] hover:text-gold transition-colors font-light">estimate@bakitchenandbathdesign.com</a>
            </div>
            <div class="flex flex-col gap-1">
              <span class="text-[13px] text-white/40 uppercase tracking-widest">Phone:</span>
              <a href="tel:7706274661" class="text-[15px] hover:text-gold transition-colors font-light">(770) 627-4661</a>
            </div>
            <div class="flex flex-col gap-1">
              <span class="text-[13px] text-white/40 uppercase tracking-widest">Location:</span>
              <p class="text-[15px] font-light text-white/80">1739 Canton Rd. Marietta, GA 30066</p>
            </div>
          </div>
        </div>

        <!-- Hours -->
        <div class="flex flex-col gap-8 mt-4">
          <h3 class="text-[12px] uppercase tracking-widest text-white/40 font-medium">Showroom Hours</h3>
          <div class="flex flex-col gap-4">
            <div class="flex flex-col gap-1">
              <span class="text-[13px] text-white/40 uppercase tracking-widest">Monday - Friday:</span>
              <p class="text-[15px] font-light text-white/80">8:00 am to 5:00 pm</p>
            </div>
            <div class="flex flex-col gap-1">
              <span class="text-[13px] text-white/40 uppercase tracking-widest">Saturday:</span>
              <p class="text-[15px] font-light text-white/80">9:00 am to 3:00 pm</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Background Text -->
  <div class="absolute bottom-10 left-0 w-full opacity-10 pointer-events-none select-none z-0 reveal reveal-up delay-500">
    <img src="/home/Mask_group.webp" alt="" class="w-full h-auto object-contain max-h-[150px]" />
  </div>

  <!-- Bottom Bar -->
  <div class="px-6 md:px-[54px] max-w-[1440px] mx-auto mt-24 flex justify-between items-center text-[11px] text-white/30 font-light border-t border-white/5 pt-8 relative z-10">
    <p>Copyright &copy; 2026 BA Stone Surfaces LLC</p>
    <a href="/privacy" class="hover:text-gold transition-colors">Privacy Policy</a>
  </div>
</footer>
