---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
---

<Layout title="Contact Us | BA Kitchen & Bath Remodeling">
  <Header />
  <main>
    <!-- Hero Section -->
    <section 
      class="relative h-screen min-h-screen flex items-end justify-start text-white px-6 md:px-[54px] pt-[110px] pb-10 md:pb-[100px] bg-cover bg-center" 
      style="background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.2)), url('/contact/image_header-11.webp');"
    >
      <div class="reveal reveal-up">
        <h1 class="text-5xl md:text-[80px] leading-tight font-light text-white m-0">
          Contact
        </h1>
      </div>
    </section>

    <!-- Content Section -->
    <section class="bg-beige-light px-6 md:px-[54px] lg:px-[140px] py-[100px] md:py-[140px] min-h-screen">
        <div class="max-w-[1400px] mx-auto grid grid-cols-1 lg:grid-cols-2 gap-16 lg:gap-24">
            
            <!-- Left Column: Contact Info -->
            <div class="flex flex-col gap-12 reveal reveal-up">
                <div class="flex flex-col gap-4">
                    <span class="text-gold text-lg md:text-xl font-light tracking-wide">Letâ€™s bring your vision to life</span>
                    <h2 class="text-4xl md:text-6xl font-light text-black-soft leading-tight">Contact us today</h2>
                </div>

                <div class="flex flex-col gap-10">
                    <div class="flex flex-col gap-1">
                        <span class="text-[12px] uppercase tracking-[0.2em] text-black-soft/40 font-medium">Phone</span>
                        <a href="tel:7706274661" class="text-2xl md:text-3xl font-light text-black-soft hover:text-gold transition-colors w-fit">(770) 627-4661</a>
                    </div>
                    
                    <div class="flex flex-col gap-1">
                        <span class="text-[12px] uppercase tracking-[0.2em] text-black-soft/40 font-medium">Email</span>
                        <a href="mailto:estimate@bakitchenandbathdesign.com" class="text-2xl md:text-3xl font-light text-black-soft hover:text-gold transition-colors w-fit break-all">estimate@<br/>bakitchenandbathdesign.com</a>
                    </div>
                </div>
            </div>

            <!-- Right Column: Showroom & Map -->
            <div class="flex flex-col gap-10 reveal reveal-up delay-200">
                <div class="flex flex-col gap-6">
                    <h3 class="text-[14px] uppercase tracking-[0.2em] text-gold font-medium">Kitchen and Bath Showroom Marietta - Eas Cobb</h3>
                    <div class="flex flex-col gap-4">
                        <p class="text-3xl md:text-4xl font-light text-black-soft leading-tight">
                            1739 Canton RD.<br />
                            Marietta, GA 30066
                        </p>
                        <div class="text-[13px] leading-relaxed text-black-soft/60 font-light max-w-xl">
                            <span class="font-medium text-black-soft/80">Service area for countertops installation:</span> Atlanta, Marietta, East Cobb, Buckhead, Brookhaven, Sandy Springs, Dunwoody, Vinings, Roswell, Milton, Alpharetta, Kennesaw, Acworth, Dallas, Hiram, Powder Springs, Canton, Cumming
                        </div>
                    </div>
                </div>

                <!-- Google Map -->
                <div class="w-full h-[400px] bg-gray-200 grayscale hover:grayscale-0 transition-all duration-700 rounded-sm overflow-hidden">
                    <iframe 
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3309.467888874676!2d-84.53676832448364!3d33.95484897319385!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x88f5110d7a7d4d7d%3A0x6b8f3b8b6b8b6b8b!2s1739%20Canton%20Rd%2C%20Marietta%2C%20GA%2030066!5e0!3m2!1sen!2sus!4v1707140000000!5m2!1sen!2sus" 
                        width="100%" 
                        height="100%" 
                        style="border:0;" 
                        allowfullscreen="" 
                        loading="lazy" 
                        referrerpolicy="no-referrer-when-downgrade">
                    </iframe>
                </div>
            </div>
        </div>
    </section>
  </main>
</Layout>
